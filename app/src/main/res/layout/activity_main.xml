<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_01"
    tools:context=".Activities.MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:onClick="english"
            app:srcCompat="@drawable/english" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/imageView_turkish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:onClick="turkish"
            app:srcCompat="@drawable/turkish" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/imageView_russia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:onClick="russia"
            app:srcCompat="@drawable/russia" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>