<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_challenge_01"
    tools:context=".Fragments.TriangleFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="10dp">

            <TextView
                android:id="@+id/textView_level5"
                android:layout_width="134dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangleforquestionandpoint"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:text="Question 1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="8dp"
                android:layout_height="54dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView_TriangleFragment_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/time_image" />

            <TextView
                android:id="@+id/textView_timer5"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:text="10"
                android:textAlignment="viewStart"
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Score_ForTriangle"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangleforquestionandpoint"
                android:paddingTop="8dp"
                android:text="Score: 90"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="93dp">

            <LinearLayout
                android:id="@+id/linearLayout22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/gridLayout8"
                    android:layout_width="wrap_content"
                    android:layout_height="152dp">

                    <TextView
                        android:id="@+id/textView_Triangle_Number1"
                        android:layout_width="wrap_content"
                        android:layout_height="127dp"
                        android:paddingTop="70sp"
                        android:text="999"
                        android:textAlignment="viewEnd"
                        android:textColor="#407804"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <TextView
                        android:id="@+id/textView_Triangle_Number3"
                        android:layout_width="wrap_content"
                        android:layout_height="47dp"
                        android:text="999"
                        android:textAlignment="viewStart"
                        android:textColor="#407804"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        app:layout_column="2"
                        app:layout_row="0" />

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/triangleforgame2"
                        app:layout_column="1"
                        app:layout_row="0" />
                </androidx.gridlayout.widget.GridLayout>

                <TextView
                    android:id="@+id/textView_Triangle_Number2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:textAlignment="center"
                    android:textColor="#407804"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="114dp"
                android:layout_weight="1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/linearLayout21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/gridLayout9"
                    android:layout_width="wrap_content"
                    android:layout_height="154dp">

                    <TextView
                        android:id="@+id/textView_Triangle_Number4"
                        android:layout_width="wrap_content"
                        android:layout_height="140dp"
                        android:paddingTop="40sp"
                        android:text="999"
                        android:textAlignment="viewEnd"
                        android:textColor="#04257A"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/triangleforgame2"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <TextView
                        android:id="@+id/textView_Triangle_Number6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"
                        android:textAlignment="viewStart"
                        android:textColor="#04257A"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        app:layout_column="2"
                        app:layout_row="0" />
                </androidx.gridlayout.widget.GridLayout>

                <TextView
                    android:id="@+id/textView_Triangle_Number5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="999"
                    android:textAlignment="center"
                    android:textColor="#04257A"
                    android:textSize="20sp"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="166dp"
            tools:layout_editor_absoluteY="369dp">

            <TextView

                android:id="@+id/editText_NewTriangleForAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circleforuser"
                android:hint='"?"'
                android:paddingTop="8dp"
                android:textAlignment="center"
                android:textColor="#04257A"
                android:textColorHint="#3E3939"
                android:textSize="36sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_1" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_2" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_3" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_4" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_6" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_7" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_8" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_9" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboard0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_0" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboardback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_back" />

                <ImageView
                    android:id="@+id/imageView_TriangleGame_Fragment_Keyboardok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/keyboard_green_ok" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>