                android:layout_height="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_RectangleGame_Fragment_Keyboardback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
