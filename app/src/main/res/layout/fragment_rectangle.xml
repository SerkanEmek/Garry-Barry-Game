                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="8dp"
                android:layout_height="54dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView_RectangleFragment_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/time_image" />

            <TextView
                android:id="@+id/textView_timer6"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:text="10"
                android:textAlignment="viewStart"
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Score_ForRectangle"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangleforquestionandpoint"
                android:paddingTop="8dp"
                android:text="Score: 90"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="76dp">

            <LinearLayout
                android:id="@+id/linearLayout23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_Rectangle_Number5"
                    android:layout_width="wrap_content"
                    android:layout_height="147dp"
