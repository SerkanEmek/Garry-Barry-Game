                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    app:layout_column="2"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/textView_NewRemember5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
