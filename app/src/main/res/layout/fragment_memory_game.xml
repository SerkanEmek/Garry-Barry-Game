    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_challenge_01"
    tools:context=".Fragments.MemoryGameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/linearLayout18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="51dp">

            <TextView
                android:id="@+id/textView_level2"
                android:layout_width="134dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangleforquestionandpoint"
                android:paddingLeft="8dp"
                android:paddingTop="7dp"
                android:text="Question 1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="8dp"
                android:layout_height="54dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView_MemoryGameFragment_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/time_image" />

            <TextView
                android:id="@+id/textView_timer2"
                android:layout_width="50dp"
                android:layout_height="58dp"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:text="10"
                android:textAlignment="viewStart"
                android:textColor="#070707"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_Score_ForMemoryGame"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:background="@drawable/rectangleforquestionandpoint"
                android:paddingTop="8dp"
                android:text="Score: 90"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="77dp">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/gridLayout15"
