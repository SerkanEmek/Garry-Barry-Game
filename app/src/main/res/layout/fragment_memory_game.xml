                    android:paddingTop="9dp"
                    android:text="999"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="26sp"
                    app:layout_column="2"
                    app:layout_row="0" />

                <Space
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    app:layout_column="0"
                    app:layout_row="0" />
            </androidx.gridlayout.widget.GridLayout>

            <androidx.gridlayout.widget.GridLayout
